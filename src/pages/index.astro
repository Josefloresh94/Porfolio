---
import Badge from '../components/Badge.astro';
import Layout from '../layouts/Layout.astro';
import LinkedInIcon from '../Asstes/icons/LinkedIn.astro'
import GitHubIcon from '../Asstes/icons/GitHub.astro'
import MailIcon from '../Asstes/icons/Mail.astro'
import Briefcase from '../Asstes/icons/Briefcase.astro'
import CodeIcon from '../Asstes/icons/Code.astro'
import SocialPill from '../components/SocialPill.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Projects from '../components/Projects.astro';
---

<Layout 
	title="Portfolio de José Flores - Desarrollador y Programador Web"
	description='Pongamonos en contacto y desarrollemos la solución a tu idea de proyecto de software'
	>
	<main class="px-4">
		<SectionContainer class="py-44 pb-32">
			<img
        		class="rounded-full size-12 mb-4" 
        		src="/public/projects/Perfil.webp" 
        		alt="Jose Foto"
			/>
			<h1 class="text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
				Hey, soy José Flores 
				<a 
					href="https://www.linkedin.com/in/jose-floresh94/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center">
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white">
				<span>1 año de experiencia.</span>
				<span class="text-yellow-800 dark:text-yellow-200">Junior Fullstack developer.</span>
				<span class="text-blue-600">De San Salvador, El Salvador.</span>
				<span class="opacity-85">Enfocado en obtener metas, a traves de software</span>
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/jose-floresh94/">
					<LinkedInIcon class="size-4 md:size-6"/>
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/Josefloresh94">
					<GitHubIcon class="size-4 md:size-6"/>
					GitHub
				</SocialPill>
				<SocialPill href="mailto:jose.flores94h@gmail.com">
					<MailIcon class="size-4 md:size-6"/>
					jose.flores94h@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2
				class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
			>
				<Briefcase class="size-7" />
				Experiencia laboral
			</h2>
			<Experience/>
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2
				class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
			>
				<CodeIcon class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>

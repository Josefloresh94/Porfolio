---
import Angular from "../Asstes/icons/Angular.astro"
import Tailwind from "../Asstes/icons/Tailwind.astro"
import GitHub from "@/Asstes/icons/GitHub.astro"
import LinkButton from "@/components/LinkButton.astro"

const TAGS = {
    ANGULAR: {
        name: "Angular",
        class: "bg-black text-white",
        icon: Angular,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white",
        icon: Tailwind,
    },
}
const PROJECTS = [
    {
        title: "Clon de Trello - Software de administración de proyectos",
        description:
            "Se ha realizado la maquetación y pequeñas funcionalidades (Como el drag and drop de tareas) en Angular, con su versión 17 y su nueva sintaxis. El proyecto está en proceso de desarrollo ya que es parte de una serie de cursos de la plataforma Platzi y su carrera de Angular.",
        link: "https://jftrello-clone.netlify.app",
        github: "https://github.com/Josefloresh94/trello-clone",
        image: "/projects/trello-clone.webp",
        tags: [TAGS.ANGULAR, TAGS.TAILWIND],
    },
    // {
    //     title: "AdventJS - Retos de programación con JavaScript y TypeScript",
    //     description:
    //         "Plataforma gratuita con retos de programación. Más de 1 millón de visitas en un mes. +50K retos completados. Creada desde cero con Next.js, React y Tailwind CSS",
    //     link: "https://adventjs.dev",
    //     image: "/projects/svgl.webp",
    //     tags: [TAGS.ANGULAR, TAGS.TAILWIND],
    // },
]
---
<section class="flex flex-col gap-y-16">
    {
        PROJECTS.map(({ image, title, description, tags, link, github }) => (
            <article>
                <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
                    {title}
                </h3>
                <p class="text-lg mb-4 text-pretty">{description}</p>
                <ul class="flex gap-x-2 flex-row mb-2">
                    {tags.map((tag) => (
                    <li>
                        <span
                            class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}
                        >
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                    ))}
                </ul>
                <img
                    loading="lazy"
                    class="rounded shadow-2xl shadow-white/25 aspect-video"
                    src={image}
                    alt={`Captura de pantalla del proyecto ${image}`}
                />
                <footer class="flex gap-x-4 items-end justify-start mt-4">
                    {github && (
                        <LinkButton href={github}>
                        <GitHub class="size-6" />
                        Ver código fuente
                        </LinkButton>
                    )}
                    <LinkButton href={link}>
                        <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        >
                        <>
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                            <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                            <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                            <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                            <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                            <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                            <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                            <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                            <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
                        </>
                        </svg>
                        Ir al sitio web
                    </LinkButton>
                </footer>
            </article>
        ))
    }
</section>